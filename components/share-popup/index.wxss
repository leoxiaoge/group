/* components/share-popup/index.wxss */
.share {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.60);
}

.share-content {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
}

.share-main {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0 30rpx 0;
}

.share-wechat {
  width: 50%;
  text-align: center;
  background-color: #fff;
}

.share-wechat image {
  width: 88rpx;
  height: 88rpx;
}

.share-wechat-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #6b6b6b;
}

.share-poster {
  width: 50%;
  text-align: center;
  background-color: #fff;
}

.share-poster image {
  width: 88rpx;
  height: 88rpx;
}

.share-poster-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #6b6b6b;
}

.share-cancel button {
  font-size: 36rpx;
  color: #424242;
  background-color: #f6f6f6;
}