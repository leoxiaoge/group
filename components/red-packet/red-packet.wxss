/* components/red-packet/red-packet.wxss */
@keyframes open-top {
  0% {
    transform: rotateX(0);
  }
  100% {
    transform: rotateX(90deg);
  }
}

@keyframes open-up {
  0% {
    transform: rotateX(-90deg);
  }
  100% {
    transform: rotateX(0);
  }
}

.userinfo {  
  position: relative;   
  color: #fff;  
  display: flex;
  justify-content: center; 
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 88rpx;  
  height: 88rpx;  
  margin: 20rpx; 
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}

.content {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  z-index: 1000;
  background: rgba(0,0,0,0.60);
}

.red-packet {
  position: relative;
}

.red-packet-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
  width: 560rpx;
  background-image: url('http://lcbblog.com/images/packet/red-packet-bg.png');
  border-radius: 20rpx;
}

.red-packet-sharer {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 200rpx 0 20rpx 0;
}

.red-packet-sharer image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.red-packet-sharer text {
  font-size: 36rpx;
  line-height: 1.8;
  color: #f6e9b5;
  padding: 0 10rpx;
}

.red-packet-remark {
  font-size: 36rpx;
  line-height: 1.8;
  color: #f6e9b5;
  text-align: center;
  margin: 0 0 200rpx 0;
}

.red-packet-open {
  display: flex;
  justify-content: center;
  margin: 100rpx 0 120rpx 0;
}

.red-packet-open button {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: #ebcd9b;
  margin: 0;
  padding: 0;
  border: none;
}

.red-packet-open image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.red-packet-y {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
  width: 560rpx;
  background-image: url('http://lcbblog.com/images/packet/red-packet-y.png');
  border-radius: 20rpx;
}

.red-packet-user {
  margin: 100rpx 0 0 0; 
}

.red-packet-received {
  text-align: center;
  margin: 20rpx 0 10rpx 0;
}

.red-packet-received text {
  font-size: 36rpx;
  line-height: 1.8;
  color: #989898;
}

.red-packet-money {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin: 20rpx 0 20rpx 0;
}

.red-packet-money-number {
  font-size: 120rpx;
  line-height: 1;
  color: #c3a370;
}

.red-packet-money-unit {
  font-size: 36rpx;
  line-height: 1.6;
  padding: 0 10rpx;
  color: #c3a370;
}

.red-packet-usefulness {
  text-align: center;
}

.red-packet-usefulness text {
  font-size: 36rpx;
  line-height: 1.6;
  color: #c3a370;
}

.red-packet-order {
  margin: 60rpx 0 100rpx 0;
}

.red-packet-order button {
  width: 80%;
  font-size: 36rpx;
  line-height: 2.6;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 10rpx;
}

.red-packet-note {
  text-align: center;
  margin: 10rpx 0 20rpx 0;
}

.red-packet-note text {
  font-size: 18rpx;
  line-height: 1.6;
  color: #a3a3a3;
}

.red-packet-close {
  position: absolute;
  left: 50%;
  bottom: 18%;
  transform: translate(-50%, 0);
}

.red-packet-close image {
  width: 68rpx;
  height: 68rpx;
}