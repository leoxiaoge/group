/* components/suggestions/index.wxss */
.suggestions {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.60);
}

.suggestions-content {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.suggestions-textarea {
  margin: 30rpx 30rpx;
}

.suggestions-textarea textarea {
  font-size: 36rpx;
  line-height: 1.8;
  color: #666666;
}

.suggestions-button {
  margin: 30rpx 30rpx;
}

.suggestions-button button {
  height: 90rpx;
  font-size: 36rpx;
  line-height: 90rpx;
  color: #fff;
  background-color: #ff5c27;
}