/* components/navigationBar/index.wxss */
.empty {
  height: 100rpx;
}

.navigation {
  position: fixed;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #f7f6f6;
}

.navigation-bar-button {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f7f6f6;
}

.navigation-bar-image {
  width: 32rpx;
  height: 32rpx;
}

.navigation-bar-text {
  font-size: 24rpx;
  color: #818181;
  padding: 15rpx;
}