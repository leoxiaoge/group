/* components/popup-picker/index.wxss */
.content {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.60);
  z-index: 10;
}

.page-content {
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.page-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cancel {
  color: #8f8f8f;
  margin: 0;
}

.confirm {
  color: #33ae6d;
  margin: 0;
}