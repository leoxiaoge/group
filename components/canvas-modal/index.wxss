/* components/canvas/index.wxss */
.content {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.60);
  z-index: 10;
}

.page-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
}

.canvas {
  width: 100%;
  height: -webkit-calc(100% - 44px);
  height: -moz-calc(100% - 44px);
  height: calc(100% - 44px);
  background: #fff;
}

.save {
  margin: 20rpx 0 0 0;
}

.save-button {
  height: 80rpx;
  font-size: 24rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 10rpx;
}