/* pages/ucenter/addingGoods/addingGoods.wxss */
page {
  background-color: #fff;
}

.goods-item {
  border-bottom: 2rpx solid #ededed;
  margin: 0 30rpx;
  padding: 26rpx 0;
}

.sign {
  color: #ff0000;
}

.goods-title {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.title-input {
  width: 100%;
  font-size: 28rpx;
  line-height: 1.6;
  color: #6e6e6e;
}

.goods-desc {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.goods-image {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.goods-content-image {
  position: relative;
  border: 2rpx solid #ededed;
}

.add-image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 68rpx;
  height: 68rpx;
}

.camera-image {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 28rpx;
  height: 28rpx;
}

.goods-content-item {
  width: 140rpx;
  height: 140rpx;
  margin: 4rpx;
}

.goods-image-list {
  width: 68rpx;
  height: 68rpx;
}

.goods-item-specifications {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-item-specifications-left {
  display: flex;
  align-items: center;
}

.goods-item-specifications-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #6e6e6e;
}

.goods-item-sku-input {
  padding: 0 20rpx;
}

.goods-item-specifications-right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.goods-item-add-specifications-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #ff0000;
  padding: 0 8rpx;
}

.goods-item-specifications-image {
  width: 28rpx;
  height: 28rpx;
}

.goods-item-content {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.goods-item-content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #6e6e6e;
}

.goods-item-content-input {
  font-size: 28rpx;
  line-height: 1.6;
  color: #afafaf;
  padding: 0 20rpx;
}

.goods-item-content-sort {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-item-content-sort-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #6e6e6e;
}

.arrow-image {
  width: 28rpx;
  height: 28rpx;
}

.goods-item-tag {
  margin: 0 30rpx;
  padding: 30rpx 0;
}

.goods-item-tag-content {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.goods-item-tag-image {
  width: 28rpx;
  height: 28rpx;
}

.goods-item-tag-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #6ec902;
  padding: 0 8rpx;
}

.goods-item-button {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  background-color: #fff;
  padding: 0 30rpx;
}

.empty {
  height: 100rpx;
}

.submit-button {
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 100rpx;
}

.popup-slot {
  margin: 0 30rpx;
}

.tag-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.tag-input-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  border-bottom: 2rpx solid #ededed;
  margin: 0 20rpx 0 0;
}

.tag-input {
  width: 100%;
  font-size: 38rpx;
  line-height: 1.6;
  color: #8f8f8f;
}

.tag-num {
  font-size: 22rpx;
  line-height: 1.6;
  color: #8f8f8f;
}

.tag-button {
  width: 180rpx;
  height: 68rpx;
  line-height: 68rpx;
  color: #fff;
  background-color: #ff0000;
  border-radius: 8rpx;
  margin: 0;
}

.tag-close-image {
  width: 32rpx;
  height: 32rpx;
}

.tag-chosen {
  margin: 20rpx 0;
}

.tag-chosen-title {
  font-size: 28rpx;
  line-height: 1.6;
  color: #8f8f8f;
}

.tag-chosen-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin: 20rpx 0;
}

.tag-chosen-item {
  position: relative;
  text-align: center;
  background-color: #fff;
  border: 2rpx solid #ff5c27;
  border-radius: 100rpx;
  margin: 0 8rpx;
  padding: 4rpx 10rpx;
}

.tag-chosen-text {
  font-size: 24rpx;
  line-height: 1.8;
  color: #ff5c27;
}

.tag-close-image {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
}

.tag-common {
  margin: 30rpx 0 60rpx 0;
}

.tag-common-title {
  font-size: 28rpx;
  line-height: 1.6;
  color: #8f8f8f;
}

.tag-common-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin: 20rpx 0 20rpx 0;
}

.tag-common-item {
  border-radius: 100rpx;
  border: 2rpx solid #eeeeee;
  padding: 4rpx 10rpx;
  margin: 0 8rpx;
}

.tag-common-item-active {
  color: #fff;
  background-color: #ff5c27;
  border: 2rpx solid #ff5c27;
}

.tag-common-text {
  font-size: 20rpx;
  line-height: 1.8;
  color: #989898;
}