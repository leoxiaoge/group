/* pages/ucenter/settingSpecifications/settingSpecifications.wxss */
page {
  background-color: #fff;
}

switch {
  zoom:.8;
}

.setting {
  margin: 0 30rpx;
}

.setting-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.setting-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #6e6e6e;
}

.spec-title {
  margin: 0 30rpx;
  padding: 20rpx 0;
}

.spec-title-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #6e6e6e;
}

.spec {
  margin: 0 30rpx;
}

.spec-content {
  padding: 10rpx 0;
}

.spec-item {
  width: 100%;
  border-top: 2rpx solid #ededed;
  padding: 10rpx 0;
}

.spec-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.spec-content-text {
  width: 100%;
  font-size: 24rpx;
  line-height: 1.6;
  text-align: right;
  color: #6e6e6e;
  padding: 0 40rpx;
}

.spec-content-title {
  padding: 10rpx 0;
}

.spec-index {
  font-size: 24rpx;
  line-height: 1.6;
  color: #ff5c27;
  padding: 0 10rpx;
}

.spec-index-text {
  font-size: 24rpx;
  line-height: 1.6;
  color: #7b7b7b;
  padding: 0 10rpx;
}

.spec-right {
  width: 460rpx;
}

.spec-input {
  width: 428rpx;
  height: 55rpx;
  font-size: 20rpx;
  color: #afafaf;
	background-color: #ffffff;
	border-radius: 10rpx;
  border: solid 2rpx #e5e5e5;
  padding: 10rpx 20rpx;
}

.spec-content-image {
  position: relative;
  border: 2rpx solid #ededed;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 140rpx;
  height: 140rpx;
  margin: 4rpx;
}

.add-image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 68rpx;
  height: 68rpx;
}

.camera-image {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 28rpx;
  height: 28rpx;
}

.empty {
  height: 100rpx;
}

.next {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  padding: 0 30rpx;
}

.next button {
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 100rpx;
  background-color: #ff5c27;
}