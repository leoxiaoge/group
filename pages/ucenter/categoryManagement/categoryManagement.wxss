/* pages/ucenter/categoryManagement/categoryManagement.wxss */
page {
  background-color: #fff;
}

.popup-slot {
  width: 520rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.popup-input {
  margin: 0 30rpx;
  padding: 60rpx 0;
}

.popup-button {
  color: #fff;
  background-color: #ff5c27;
  border-radius: 0 0 12rpx 12rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx;
  padding: 40rpx 0 30rpx 0;
}

.category-header-title {
  font-size: 30rpx;
  line-height: 1.6;
  color: #292929;
}

.category-add-button {
  height: 66rpx;
  font-size: 28rpx;
  line-height: 66rpx;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 8rpx;
  border: 2rpx solid #ff5c27;
  margin: 0;
}

.category-content {
  margin: 0 30rpx;
}

.category-item {
  position: relative;
}

.category-item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #ededed;
  padding: 30rpx 0;
}

.category-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.category-item-index {
  font-size: 24rpx;
  line-height: 1.6;
  color: #292929;
}

.category-item-title {
  font-size: 24rpx;
  line-height: 1.6;
  color: #292929;
  margin-left: 40rpx;
}

.category-operating-image {
  width: 44rpx;
  height: 44rpx;
}

.category-tags {
  margin: 0 30rpx;
}

.category-tags-title {
  padding: 30rpx 0;
}

.category-tags-content {
  display: flex;
  flex-wrap: wrap;
}

.category-tags-item {
  font-size: 24rpx;
  line-height: 1.6;
  color: #787878;
  background-color: #f7f6f6;
  margin: 4rpx;
  padding: 10rpx 30rpx;
}