/* pages/ucenter/commodityLibrary/commodityLibrary.wxss */
page {
  height: 100%;
}

radio {
  transform: scale(0.8);
}

.container {
  background: #fff;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.commodity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx;
  padding: 20rpx 0;
}

.search {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 75%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border: 2rpx solid #eeeeee;
  padding: 0 22rpx 0 0;
}

.search input {
  font-size: 18rpx;
  line-height: 1.6;
  color: #a5a5a5;
  padding: 20rpx 20rpx;
}

.search image {
  width: 32rpx;
  height: 32rpx;
}

.add-commodity {
  width: 25%;
  margin: 0 0 0 8rpx;
}

.add-commodity button {
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #fff;
  background-color: #02cbfe;
  border-radius: 12rpx;
  padding: 0 15rpx;
}

.commodity {
  display: flex;
  width: 100%;
  flex: 1;
}

.nav {
  width: 125rpx;
  height: 100%;
  background-color: #f7f6f6;
}

.cate {
  height: 100%;
  margin: 0 14rpx;
}

.label {
  display: flex;
  margin: 20rpx 0;
  border-bottom: 2rpx solid #ededed;
}

.label:last-child {
  margin: 0 0 20rpx 0;
}

.commodity-item-image image {
  width: 168rpx;
  height: 168rpx;
  border-radius: 10rpx;
}

.commodity-item-library {
  width: 100%;
  margin-left: 20rpx;
}

.commodity-item-radio {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commodity-item-title {
  font-size: 24rpx;
  line-height: 1.6;
  color: #424242;
}

.commodity-item-color {
  font-size: 18rpx;
  line-height: 1.6;
  color: #6e6e6e;
}

.commodity-item-size {
  font-size: 18rpx;
  line-height: 1.6;
  color: #6e6e6e;
}

.commodity-item-price-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commodity-item-price {
  font-size: 30rpx;
  line-height: 1.6;
  color: #ff0000;
}

.commodity-item-num-text {
  font-size: 18rpx;
  line-height: 1.6;
  color: #8b8b8b;
}

.commodity-item-num-count {
  font-size: 18rpx;
  line-height: 1.6;
  color: #ff5c27;
  margin: 0 0 20rpx 0;
}