/* pages/ucenter/dataSettings/dataSettings.wxss */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #ededed;
  margin: 0 30rpx;
  padding: 30rpx 0;
}

.setting-item-avatar-image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.setting-item-text {
  font-size: 24rpx;
  line-height: 1.6;
  color: #777777;
}

.setting-item-right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.setting-item-right-text {
  font-size: 20rpx;
  line-height: 1.6;
  color: #9b9a9a;
  padding-right: 12rpx;
}

.setting-item-arrow {
  width: 18rpx;
  height: 18rpx;
}

.setting-textarea {
  margin: 0 30rpx;
  padding: 30rpx 0;
}

.setting-textarea textarea {
  width: calc(100% - 40rpx);
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.empty {
  height: 100rpx;
}

.submit {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  padding: 0 30rpx;
}

.submit button {
  height: 80rpx;
  font-size: 36rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 100rpx;
}

.popup-slot {
  width: 520rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.popup-input {
  margin: 0 30rpx;
  padding: 60rpx 0;
}

.popup-button {
  color: #fff;
  background-color: #ff5c27;
  border-radius: 0 0 12rpx 12rpx;
}
