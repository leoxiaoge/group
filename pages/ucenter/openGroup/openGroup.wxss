/* pages/ucenter/openGroup/openGroup.wxss */
page {
  background-color: #fff;
}

.goods-item {
  border-bottom: 2rpx solid #ededed;
  margin: 0 30rpx;
  padding: 26rpx 0;
}

.sign {
  color: #ff0000;
}

.goods-title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.title-input {
  width: 100%;
  font-size: 28rpx;
  line-height: 1.6;
  color: #6e6e6e;
}

.empty {
  height: 100rpx;
}

.submit-button {
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 100rpx;
}

.popup-slot {
  margin: 0 30rpx;
}

.tag-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.tag-input-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  border-bottom: 2rpx solid #ededed;
  margin: 0 20rpx 0 0;
}

.tag-input {
  width: 100%;
  font-size: 28rpx;
  line-height: 1.6;
  color: #8f8f8f;
  padding: 4rpx 10rpx;
}

.tag-num {
  font-size: 22rpx;
  line-height: 1.6;
  color: #8f8f8f;
}

.tag-button {
  width: 180rpx;
  height: 68rpx;
  line-height: 68rpx;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 8rpx;
  margin: 0;
}

.tag-close-image {
  width: 32rpx;
  height: 32rpx;
}

.tag-chosen {
  margin: 20rpx 0;
}

.tag-chosen-title {
  font-size: 28rpx;
  line-height: 1.6;
  color: #8f8f8f;
}

.tag-chosen-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin: 20rpx 0;
}

.tag-chosen-item {
  position: relative;
  text-align: center;
  background-color: #fff;
  border: 2rpx solid #ff5c27;
  border-radius: 100rpx;
  margin: 0 8rpx;
  padding: 4rpx 10rpx;
}

.tag-chosen-text {
  font-size: 24rpx;
  line-height: 1.8;
  color: #ff5c27;
}

.tag-close-image {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
}

.tag-common {
  margin: 30rpx 0 60rpx 0;
}

.tag-common-title {
  font-size: 28rpx;
  line-height: 1.6;
  color: #8f8f8f;
}

.tag-common-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin: 20rpx 0 20rpx 0;
}

.tag-common-item {
  border-radius: 100rpx;
  border: 2rpx solid #eeeeee;
  padding: 4rpx 10rpx;
  margin: 0 8rpx;
}

.tag-common-item-active {
  background-color: #ff5c27;
  border: 2rpx solid #ff5c27;
}

.tag-common-item-active text {
  font-size: 20rpx;
  line-height: 1.8;
  color: #fff;
}
.tag-common-text {
  font-size: 20rpx;
  line-height: 1.8;
  color: #989898;
}

.popup-image-slot {
  border-radius: 10rpx;
}