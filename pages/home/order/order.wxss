/* pages/home/order/order.wxss */
.scroll-switch {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  background-color: #fff;
  border-top: 2rpx solid #f6f6f6;
}

.switch-item {
  display: inline-block;
  position: relative;
  width: 25%;
  text-align: center;
  padding: 30rpx 0;
}

.switch-item-content {
  position: relative;
}

.switch-item-title {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #000;
}

.switch-item-info {
  position: absolute;
  top: 8rpx;
  right: 30rpx;
  box-sizing: border-box;
  color: #fff;
  font-weight: 500;
  font-size: 24rpx;
  font-family: Avenir-Heavy, PingFang SC, Helvetica Neue, Arial, sans-serif;
  line-height: 24rpx;
  text-align: center;
  background-color: #ff0000;
  border: 2rpx solid #fff;
  border-radius: 32rpx;
  padding: 4rpx;
  -webkit-transform: translate(50%, -50%);
  transform: translate(50%, -50%);
  -webkit-transform-origin: 100%;
  transform-origin: 100%;
}

.switch-item-active {
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 0);
  width: 60rpx;
  height: 6rpx;
  background-color: #ff5c27;
  border-radius: 8rpx;
}

.order-content {
  margin: 15rpx 30rpx;
}

.order-content-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx 0;
  padding: 26rpx 24rpx;
}

.order-content-title {
  font-size: 36rpx;
  line-height: 1.8;
  color: #424242;
}

.order-content-item-date-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-content-date {
  font-size: 28rpx;
  line-height: 1.8;
  color: #424242;
}

.order-content-status {
  font-size: 32rpx;
  line-height: 1.6;
  color: #ff5c27;
}

.order-content-child {
  border-top: 2rpx solid #f6f6f6;
  border-bottom: 2rpx solid #f6f6f6;
  margin: 20rpx 0;
}

.order-content-child-item {
  display: flex;
  padding: 20rpx 0;
}

.order-content-child-images {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
}

.order-content-child-images image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 6rpx;
}

.order-content-child-content {
  width: 100%;
  padding: 0 0 0 8rpx; 
  border-bottom: 2rpx solid #f6f6f6;
}

.order-content-child-content:last-child {
  border-bottom: 2rpx solid #fff;
}

.order-content-child-info {
  padding: 0 0 40rpx 0;
}

.order-content-child-first {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-content-child-title {
  font-size: 28rpx;
  line-height: 1.6;
  color: #424242;
}

.order-content-child-price {
  font-size: 32rpx;
  color: #ff5c27;
}

.order-content-child-second {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-content-child-specification {
  font-size: 28rpx;
  line-height: 1.6;
  color: #7b7b7b;
}

.order-content-child-number {
  font-size: 24rpx;
  line-height: 1.6;
  color: #b0b0b0;
}

.order-content-child-order {
  font-size: 24rpx;
  line-height: 1.6;
  color: #424242;
}

.order-content-date {
  font-size: 28rpx;
  line-height: 1.6;
  color: #424242;
}

.order-content-item-total {
  padding: 10rpx 0;
}

.order-content-item-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #424242;
}

.order-content-item-price {
  font-size: 28rpx;
  line-height: 1.6;
  color: #ff5c27;
}

.order-content-item-button {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10rpx;
}

.order-content-button {
  display: block;
  height: 55rpx;
  font-size: 24rpx;
  line-height: 55rpx;
  color: #ff5c27;
  background-color: #fff;
  border: 2rpx solid #ff5c27;
  border-radius: 100rpx;
  margin: 0 8rpx;
}

.order-content-active-button {
  display: block;
  height: 55rpx;
  font-size: 24rpx;
  line-height: 55rpx;
  color: #fff;
  background-color: #ff5c27;
  border: 2rpx solid #ff5c27;
  border-radius: 100rpx;
  margin: 0 8rpx;
}