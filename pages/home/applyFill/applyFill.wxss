/* pages/home/applyFill/applyFill.wxss */
.fill {
  background-color: #fff;
  padding: 30rpx 30rpx;
}

.fill-piece {
  border-bottom: 2rpx solid #f7f7f7;
  padding: 12rpx 0;
}

.fill-title {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.fill-tag {
  font-size: 24rpx;
  color: #ff0000;
  padding: 0 8rpx 0 0;
}

.fill-title-text {
  font-size: 24rpx;
  line-height: 1.8;
  color: #a9a9a9;
}

.fill-region {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fill-region input {
  color: #7f7f7f;
  font-size: 32rpx;
  line-height: 1.6;
  padding: 8rpx 20rpx;
}

.fill-region button {
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #ff0000;
  background-color: #fff;
  border: 2rpx solid #ff5c27;
  border-radius: 100rpx;
  margin: 0;
}

.fill-arrow {
  width: 18rpx;
  height: 18rpx;
}

.fill-region-date {
  padding: 0 20rpx;
}

.fill-date {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 50%;
}

.fill-date-icon {
  display: flex;
  justify-content: center;
  align-items: center;
}

.fill-date-image {
  width: 36rpx;
  height: 36rpx;
}

.fill-date-text {
  font-size: 36rpx;
  line-height: 1.6;
  color: #7f7f7f;
  padding: 0 12rpx;
}

.fill-piece-item {
  display: flex;
  justify-content: space-between;
  align-content: center;
  padding: 10rpx 20rpx;
}

.fill-locate {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.fill-locate-image {
  width: 24rpx;
  height: 24rpx;
}

.fill-locate-text {
  font-size: 24rpx;
  line-height: 1.6;
  color: #7f7f7f;
  padding: 0 8rpx;
}

.empty {
  background-color: #fff;
  height: 120rpx;
}

.fill-submit {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx 20rpx 30rpx;
}

.fill-submit button {
  width: 100%;
  height: 80rpx;
  font-size: 36rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 40rpx;
  margin: 0;
}