/* pages/home/applyUpload/applyUpload.wxss */
.upload {
  background-color: #fff;
  padding: 30rpx 30rpx 30rpx 30rpx;
}

.upload-user {
  text-align: center;
  margin: 80rpx 0 0 0;
}

.upload-user-info {
  position: relative;
}

.upload-user-info-card {
  width: 400rpx;
  height: 280rpx;
}

.upload-user-info-camera {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 160rpx;
  height: 160rpx;
}

.upload-card-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #737373;
}

.upload-submit {
  margin: 0 30rpx;
}

.upload-submit button {
  width: 90%;
  height: 80rpx;
  font-size: 36rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 40rpx;
  margin: 0;
}