/* pages/home/applyUpload/applyUpload.wxss */
page {
  background-color: #fff;
}

.upload {
  background-color: #fff;
  padding: 30rpx 30rpx 30rpx 30rpx;
}

.upload-user {
  text-align: center;
  margin: 80rpx 0 0 0;
}

.upload-user-info {
  position: relative;
}

.upload-user-info-card {
  width: 80%;
  height: 100%;
}

.upload-user-info-camera {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 160rpx;
  height: 160rpx;
}

.upload-card-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #737373;
}

.empty {
  background-color: #fff;
  height: 120rpx;
}

.upload-submit {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx 20rpx 30rpx;
}

.upload-submit button {
  width: 100%;
  height: 80rpx;
  font-size: 36rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff5c27;
  border-radius: 40rpx;
  margin: 0;
}