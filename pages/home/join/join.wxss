/* pages/home/join/join.wxss */
.jion {
  margin: 30rpx 0;
}

.main-content {
  margin: 0 30rpx;
  padding: 20rpx 16rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.main-list-item {
  border-radius: 12rpx;
}

.main-list-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.main-list-info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.main-list-user {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.main-list-user-image {
  width: 55rpx;
  height: 55rpx;
  border-radius: 100%;
}

.main-list-user-name {
  font-size: 24rpx;
  color: #5e5e5e;
  padding: 0 16rpx 0 10rpx;
}

.main-list-status-time {
  font-size: 24rpx;
}

.main-list-status {
  color: #ff0000;
  margin-right: 16rpx;
}

.main-list-time {
  color: #ff0000;
}

.main-list-share {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 0;
  padding: 4rpx;
}

.main-list-share-image {
  width: 44rpx;
  height: 44rpx;
}

.main-list-show-swiper {
  height: 180rpx;
}

.main-list-show {
  margin: 15rpx 0;
}

.main-show-image {
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
  padding: 0 4rpx;
}

.main-list-label {
  margin: 10rpx 0;
}

.main-list-label-text {
  font-size: 24rpx;
  border-radius: 100rpx;
  border: 2rpx solid #dfdfdf;
  margin-right: 12rpx;
  padding: 4rpx 20rpx;
}

.main-list-title {
  margin: 20rpx 0 8rpx 0;
}

.main-list-title-text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #424242;
}

.main-list-subtitle-text {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #707070;
}

.main-list-footer {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 0;
}

.main-list-participants {
  display: flex;
  align-items: center;
}

.main-list-participants-content {
  display: flex;
  align-self: center;
}

.main-list-participants-image {
  width: 44rpx;
  height: 44rpx;
  border-radius: 100%;
  border: 2rpx solid #fff;
}

.main-already {
  margin-left: 14rpx;
}

.main-already-text {
  font-size: 24rpx;
  color: #707070;
}

.main-already-number {
  font-size: 24rpx;
  color: #ff0000;
}

.main-shop {
  border-top: 2rpx solid #f6f6f6;
  border-bottom: 2rpx solid #f6f6f6;
  padding: 10rpx 0;
}

.main-shop-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.main-shop-title {
  font-size: 24rpx;
  line-height: 1.6;
  color: #424242;
}

.main-shop-price {
  font-size: 30rpx;
  line-height: 1.6;
  color: #ff5c27;
}

.main-shop-format-number {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.main-shop-format {
  font-size: 20rpx;
  line-height: 1.6;
  color: #7b7b7b;
}

.main-shop-number {
  font-size: 24rpx;
  line-height: 1.6;
  color: #b0b0b0;
}

.main-total {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.main-total-content {
  padding: 10rpx 0 0 0;
}

.main-total-number {
  font-size: 24rpx;
  line-height: 1.6;
  color: #424242;
}

.main-total-text {
  font-size: 24rpx;
  line-height: 1.6;
  color: #424242;
  padding: 0 0 0 10rpx;
}

.main-total-price {
  font-size: 30rpx;
  line-height: 1.6;
  color: #ff5c27;
}